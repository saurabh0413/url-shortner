<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>URl shortner</h1>
    <form action="">
      <input type="text" placeholder="enter/paste url" id="texturl" />

      <button>Generate-link</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicked</th>
        </tr>
      </thead>
      <tbody>
        <% alllinks.forEach((item)=>{ %>
        <tr>
          <td><a href="<%=item.full %>"><%=item.full %></a></td>
          <td><a href="<%=item.short %>" target="_blank"><%=item.short %></a></td>
          <td><a href="<%=item.click %>"><%=item.click %></a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
<script>
  document.querySelector("button").addEventListener("click", (e) => {
    e.preventDefault();
    let mytext = document.querySelector("#texturl").value;
    fetch("/post", {
      method: "POST",
      body: JSON.stringify({ full: mytext }),
      headers: {
        "Content-Type": "application/json",
      },
    }).then((res) => res.json());
  });
</script>
